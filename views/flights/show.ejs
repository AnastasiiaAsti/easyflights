<%- include('../partials/header') %>

<section id="show-page" class="border border-warning bg-light p-1">
    <div class="col row">
        <div class="col-3">Airline: </div>
        <div><%= flight.airline %></div>
    </div>
    <div class="col row">
        <div class="col-3">Airport: </div>
        <div><%= flight.airport %></div>
    </div>
    <div class="col row">
        <div class="col-3">Flight Number: </div>
        <div><%= flight.flightNo %></div>
    </div>
    <div class="col row">
        <div class="col-2">Departs: </div>
        <div><%= flight.departs %></div>
    </div>
</section>
<form class="mt-5" id="" method="POST"
    action="/flights/<%= flight._id %>/destinations">
    <label>Airport:
        <select class="border border-warning p-1" name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    </label><br>
    <label>Arrival:
        <input class="border border-warning p-1" type="datetime-local" name="arrival">
    </label><br>
</select>
<input class="btn btn-warning mb-5" type="submit" value="Add">
</form>


    <h5 id="tickets-header">Tickets</h5>
<table class="table" id="tickets-table">
    <thead>
        <th>
            Seat
        </th>
        <th>
            Price
        </th>
    </thead>
    <% tickets.forEach(function(ticket) { %>
        <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
            <td>
                <form action="/tickets/<%= ticket._id %>?_method=DELETE" method="POST" id="delete-ticket">
                        <button type="submit" form="delete-ticket" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    <% }) %>
</table>

<a href="/flights/<%= flight._id %>/tickets/new" class="btn btn-warning mb-5" id="new-ticket-btn">Create a new ticket</a>




<% if (flight.destinations.length) { %>
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Airport</th>
        <th scope="col">Arrival</th>
        </tr>
    </thead>
    <tbody>
        <% flight.destinations.forEach(function(destination) { %>
        <tr>
            <td><%= destination.airport %></td>
            <td><%= destination.arrival %></td>
        </tr>
        <% }); %>
    </tbody>
    </table>
<% } else { %>
    <h5>No Destinations</h5>
<% } %>



<%- include('../partials/footer') %>