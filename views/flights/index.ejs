<%- include('../partials/header') %>

    <div class="container p-3">
        <table class="table">
            <thead class="table">
                <tr>
                    <th scope="col">Airline</th>
                    <th scope="col">Airport</th>
                    <th scope="col">Flight Number</th>
                    <th scope="col">Time of Departure</th>
                    <th scope="col">Flight Details</th>
                    <th scope="col">Delete Flight</th>
                </tr>
            </thead>
            <tbody class="">
                <% flights.forEach(function(flight) { %>
                    <tr>
                        <td>
                            <%= flight.airline %>
                        </td>
                        <td>
                            <%= flight.airport %>
                        </td>
                        <td>
                            <%= flight.flightNo %>
                        </td>
                        <td>
                            <%= flight.departs.toLocaleString() %>
                        </td>
                        <td><a href="/flights/<%= flight._id %>">Details</a></td>
                        <td>
                            <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST" id="deleteFlight">
                                <button type="submit" form="deleteFlight" class="btn btn-sm btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer') %>